<div class="max-w-4xl mx-auto mt-10 p-8 bg-white shadow-lg rounded-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Nuevo Cliente</h1>

  <%= form_with model: @cliente, class: "space-y-6" do |f| %>
    
    <%= render 'shared/error_messages', object: @cliente %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <%= f.label :first_name, "Nombre(s)", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :first_name, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Introduce el nombre" %>
      </div>

      <div>
        <%= f.label :last_name_paternal, "Apellido Paterno", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :last_name_paternal, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Introduce el apellido paterno" %>
      </div>

      <div>
        <%= f.label :last_name_maternal, "Apellido Materno", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :last_name_maternal, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Introduce el apellido materno" %>
      </div>

      <div>
        <%= f.label :email, "Correo ElectrÃ³nico", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.email_field :email, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Introduce el correo electrÃ³nico" %>
      </div>

      <div>
        <%= f.label :age, "Edad", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.number_field :age, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Introduce la edad" %>
      </div>

      <div>
        <%= f.label :gender, "Sexo", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.select :gender, Cliente.genders.keys.map { |gender| [gender.capitalize, gender] }, prompt: "Selecciona el sexo", class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :date_of_birth, "Fecha de Nacimiento", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.date_field :date_of_birth, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :curp, "CURP", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :curp, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Introduce el CURP" %>
      </div>
    </div>

    <div class="flex justify-between">
      <%= link_to "Regresar", root_path, class: "bg-gray-300 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-400 transition-all shadow-md" %>
      <%= f.submit "Crear Cliente", class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition-all shadow-md focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  <% end %>
</div>
